<%= simple_form_for Idea.new do |f| %>
  <%= f.input :content %>
  <%= f.input :author %>
  <%= f.submit 'Submit', class: 'btn btn-primary' %>
<% end %>

<% @ideas.each do |idea| %>
<div class="panel panel-default">
  <div class="panel-body">
    <blockquote>
        <p><%= idea.content %></p>
        <small>by <%= idea.author %></small>
    </blockquote> 
  </div>
</div>
<% end %>
